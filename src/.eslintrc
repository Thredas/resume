{
  "extends": [
    "react-app",
    "prettier"
  ],
  "rules": {
    "quotes": [2, "single"],
    "object-curly-spacing": [2, "always"],
    "jsx-quotes": [2, "prefer-double"],
    "max-len": [2, { "code": 180 }],
    "max-depth": [2, { "max": 4 }],
    "react/jsx-first-prop-new-line": [2, "multiline"],
    "react/jsx-max-props-per-line": [2, {"maximum": 5}],
    "react/jsx-closing-bracket-location": [1, {"selfClosing": "tag-aligned", "nonEmpty": "tag-aligned"}],
    "react/jsx-indent-props": [2, 2],
    "react/jsx-indent": [2, 2, {"checkAttributes": true, "indentLogicalExpressions": true}],
    "react/jsx-curly-brace-presence": [2, { "props": "never", "children": "never" }],
    "react/jsx-curly-newline": [2, {"multiline": "consistent", "singleline": "forbid"}],
    "react/jsx-curly-spacing": [2, {"when": "never", "children": {"when": "never"}}],
    "react/jsx-equals-spacing": [2, "never"]
  },
  "plugins": [
    "prettier"
  ]
}
